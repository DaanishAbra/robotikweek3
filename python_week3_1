from controller import Robot

# Waktu langkah simulasi
TIME_STEP = 64

# Inisialisasi robot
robot = Robot()

# Mendapatkan motor kiri dan kanan
left_motor = robot.getDevice('left wheel motor')
right_motor = robot.getDevice('right wheel motor')

# Mengatur mode motor ke kecepatan tak terbatas (infinity)
left_motor.setPosition(float('inf'))
right_motor.setPosition(float('inf'))

# Mengatur kecepatan awal kedua motor untuk bergerak maju
left_speed = 6.28  # kecepatan dalam rad/s
right_speed = 6.28

# Loop utama simulasi
while robot.step(TIME_STEP) != -1:
    # Mengatur kecepatan motor
    left_motor.setVelocity(left_speed)
    right_motor.setVelocity(right_speed)

# Mengakhiri simulasi
